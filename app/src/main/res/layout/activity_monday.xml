<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MondayActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainVerticalLayout">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/benchGridLayout"
            android:columnCount="7">

            <TextView
                android:text="Bench Press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/benchLabel"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/bench1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/bench2"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/bench3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/bench4"/>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ohpGridLayout"
            android:columnCount="6">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/ohp1"
                android:layout_gravity="right"
                android:layout_row="0"
                android:layout_column="1"/>

            <TextView
                android:text="Overhead Press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/overHeadPressLabel"
                android:layout_row="0"
                android:layout_column="0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/ohp2"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:layout_column="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/ohp3"
                android:layout_row="0"
                android:layout_column="3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/ohp4"
                android:layout_row="0"
                android:layout_column="5"/>
        </GridLayout>
    </LinearLayout>

</RelativeLayout>
